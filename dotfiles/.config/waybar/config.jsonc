// -*- mode: jsonc -*-
{
    "layer": "top", 
    "position": "top",
    "height": 0,
    "margin-bottom": 0,
    "margin-top": 0,
    "margin-right": 400,
    "margin-left": 400,
    "spacing": 0, 
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [ 
        "custom/applauncher"
    ],
    "modules-right": [
"network","battery","pulseaudio","clock"
    ],
    // Modules configuration

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
       "warp-on-scroll": false,
        "format": "{name}: {icon}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        }
    },

    "custom/applauncher": {
        "format" : "Â∞ë Â•≥ Ë£ù Áî≤ Êà∞ Â£´",
        "tooltip": false,
    "on-click": "bash -c 'choice=$(echo -e \"Lock Screen\\nReboot\\nShutdown\" | wofi --dmenu --prompt \"Select Action:\"); if [[ \"$choice\" == \"Lock Screen\" ]]; then hyprlock; elif [[ \"$choice\" == \"Reboot\" ]]; then systemctl reboot; elif [[ \"$choice\" == \"Shutdown\" ]]; then systemctl poweroff; fi'",
    },
    "hyprland/window" : {
        "max-length" : 30,
        "seperate-output" : false
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        } 
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    },
    "cpu": {
        "format": "C:{usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "R:{}%"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            "good": 80,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "Ôá¶",
        "format-plugged": "Ôá¶",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        "format-wifi": "Û∞§®",

        // "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        // "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        // "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        // "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click" : "networkmanager_dmenu",

        "tooltip": false
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}Û∞ìÉ",
        "format-bluetooth": "{volume}% Ôäì",
        "format-bluetooth-muted": "Û∞Öô Ôäî",
        "format-muted": "Û∞Öô {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
